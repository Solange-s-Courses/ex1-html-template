name: Check for Email in README

on:
  push:
    branches:
      - main # Or whatever your default branch is named

jobs:
  check-email:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Check README.md for email address
        id: grep-email
        run: |
          if grep -q -E "[a-zA-Z0-9._%+-]+@edu.jmc.ac.il" README.md; then
            echo "::notice file=README.md::An email address was detected in the README.md file."
            echo "result=true" >> "$GITHUB_OUTPUT"
          else
            echo "::notice file=README.md::No college email address was found in the README.md file."
            echo "result=false" >> "$GITHUB_OUTPUT"
          fi

      - name: Fail workflow if email found
        if: steps.grep-email.outputs.result == 'true'
        run: |
          echo "An email address was found in the README.md. Please remove it."
          exit 1
